html 
    head 
        title App Node
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css' rel='stylesheet')
        link(href='http://localhost:3000/assets/css/style.css' rel='stylesheet')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js' integrity='sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT' crossorigin='anonymous')
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            div.container-fluid
                a.navbar-brand(href="/") App Nodejs 
                button.navbar-toggler(
                    type="button",
                    data-bs-toggle="collapse",
                    data-bs-target="#navbarNav",
                    aria-controls="navbarNav",
                    aria-expanded="false",
                    aria-label="Toggle navigation"
                )
                    span.navbar-toggler-icon
                div.collapse.navbar-collapse#navbarNav 
                    ul.navbar-nav
                        li.nav-item.active 
                            a.nav-link(href="/") Home 
                            span.sr-only (current)
                        li.nav-item.dropdown
                            button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button'  data-bs-toggle='dropdown'   aria-expanded='false')
                                | Clientes
                            ul.dropdown-menu(aria-labelledby='dropdownMenuButton')
                                li
                                    a.dropdown-item(href="/client") Consultar 
                                li
                                    a.dropdown-item(href="/client/new") Novo
                        li.nav-item.dropdown
                            button#dropdownMenuButton1.btn.btn-primary.dropdown-toggle(type='button'  data-bs-toggle='dropdown'   aria-expanded='false')
                                | Fornecedores
                            ul.dropdown-menu(aria-labelledby='dropdownMenuButton1')
                                li
                                    a.dropdown-item(href="/supplier") Consultar 
                                li
                                    a.dropdown-item(href="/supplier/new") Novo
        block content